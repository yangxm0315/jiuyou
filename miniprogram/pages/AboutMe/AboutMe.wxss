.top{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  flex-wrap:wrap;

  height: 350rpx;
  border-bottom: 5rpx solid #dedede;
  background: #fff;
}
.toprow1{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: flex-end;
  width: 750rpx;
  height: 150rpx;
}

.img{
  display: flex;
  justify-content: center;
  border-radius: 20rpx;
  width: 120rpx;
  height: 120rpx;
}

.toprow2{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: flex-start;
  width: 750rpx;
  height: 20rpx;
}

.toprow3{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 750rpx;
  height: 120rpx;
}

.usertext{
  display: flex;
  text-align: center;
  font-size: 14px;
  color: #333333;
}

.tab{
  height: 7vh;
  display: flex;
  line-height: 7vh;
}

.tab view{
  flex: 1 0 auto;
  font-size: 14px;
  color: #333333;
  text-align: center;
}
.tab .active{
  color: #ff5f19;
  border-bottom: 1px solid #ff5f19;
  padding-bottom:1.8vh;
}

.list{
  display: flex;
  height: 100%;
  width: 100%;
}
.additem{
  display: flex;
  width: 100%;
  height: 100rpx;
  justify-content: center;
  align-items: center;
  border: 3rpx solid #dedede;
}
.addimg{
  display: flex;
  height: 60rpx;
  width: 150rpx;
  align-items: center;
}
.item{
  display: flex;
  width: 100%;
  height: 80rpx;
  border-bottom: 3rpx solid #dedede;
}
.content{
  width: 100%;
  height: 80rpx;
}
.itemtitle{
  padding-top: 20rpx;
  padding-left: 20rpx;
  display: -webkit-box;
  -webkit-line-clamp:1;
  overflow:hidden;
  text-overflow: ellipsis;  
  word-break: break-all;
  width: 740rpx;
  height: 40rpx;
}

.movearea{
  width: 100%;
  height: 80rpx;
}
.moveview{
  width: 100%;
  height: 100%;
}
.touch-item {
  font-size: 14px;
  display: flex;
  justify-content: space-between;
  border-bottom:1px solid #ccc;
  width: 100%;
  height: 100%;
  overflow: hidden
}
.itemtitle {
  width: 100%;
  padding: 10px;
  line-height: 22px;
  margin-right:0;
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
  margin-left: -90px
}
.btndel {
  background-color: orangered;
  width: 90px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
}
.touch-move-active .itemtitle,
.touch-move-active .btndel {
  -webkit-transform: translateX(0);
  transform: translateX(0);
}