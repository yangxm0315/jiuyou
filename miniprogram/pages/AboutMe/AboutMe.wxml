<view class='top'>
    <view class='toprow1'>
       <view class='img'><open-data type="userAvatarUrl"></open-data></view>
    </view>
    <view class='toprow2'>
       <view class='usertext'><open-data type="userNickName"></open-data></view>
    </view>
    <view class='toprow3'>
       <button wx:if="{{bindMobile}}" open-type="getUserInfo" bindgetuserinfo="bindGetUserInfo">授权登录</button>
       <button wx:else bindtap="userLogout">退出登录</button>
    </view>
</view>

<view class='tab'>
    <view bindtap='tabFun' data-index="{{1}}">
      <text class='{{tabIndex==1?"active":""}}'>内容管理</text>
    </view>
    <view bindtap='tabFun' data-index="2">
      <text class='{{tabIndex==2?"active":""}}'>权限管理</text>
    </view>
</view>

<scroll-view scroll-y class='list'>
  <view class='additem' wx:if="{{isAdd}}">
    <text class='addimg' bindtap="addItem">新增教案</text>
    <image class='addimg' mode="aspectFit" src="../../images/add.png" bindtap="addItem"></image>
  </view>
  <view class='itemaa' wx:for="{{list}}" wx:key="{{id}}">
    <movable-area class='movearea'>
      <movable-view class='moveview' direction="horizontal">
          <!--navigator class='content' hover-class="none" url="/pages/details/index?id={{item._id}}">
          <text class='itemtitle'>{{item.title}}</text-->
          <view class="touch-item {{item.isTouchMove ? 'touch-move-active' : ''}}" data-index="{{index}}"            bindtouchstart="touchstart" bindtouchmove="touchmove">        
            <view class="itemtitle" bindtap='goDetail' data-index="{{index}}">{{item.title}}</view>
            <view class="btndel" catchtap="delItem" data-index="{{index}}">删除</view>
          </view>
          <!--/navigator-->
      </movable-view>
    </movable-area>
  </view>
</scroll-view>

